var React = require('react')
  , PropTypes = React.PropTypes
<% if (pureRender) { -%>
  , PureRender = require('react-pure-render/mixin')
<% } -%>
<% if (bootstrap) { -%>
  , Panel = require('react-bootstrap').Panel
<% } -%>

module.exports = React.createClass({
  <% if (pureRender) { -%>mixins: [PureRender],<% } %>
  displayName: '<%= name %>',

  propTypes: {
    title: PropTypes.string
  },

  getDefaultProps: function() {
    return { title: 'I am <%= name %>' }
  },

  getInitialState: function() {
    return { }
  },

  handleClick: function() {
    // ..
  },

  render: function() {
    <% if (bootstrap) { %>return <Panel header={this.props.title} onClick={this.handleClick}>
      <p>Content</p>
      { this.props.children }
    </Panel><%} else {%>return <div onClick={this.handleClick}>
      <h2>{ title }</h2>
      <p>Content</p>
      { this.props.children }
    </div><%}%>
  }
})
